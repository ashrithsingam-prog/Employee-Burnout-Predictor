<script>
// TAB SWITCHING
function showTab(id, btn) {
  document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
  document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
  document.getElementById(id).classList.add('active');
  if (btn) btn.classList.add('active');
  if (id === 'workflow') animateSteps();
  if (id === 'ethics') animateCards();
  if (id === 'dashboard') { initCharts(); }
  if (id === 'checkin' && !chatStarted) startChat();
}

// WORKFLOW ANIMATION
function animateSteps() {
  document.querySelectorAll('.step').forEach((s, i) => {
    s.classList.remove('visible');
    setTimeout(() => s.classList.add('visible'), i * 120);
  });
}
function animateCards() {
  document.querySelectorAll('.ethics-card').forEach((c, i) => {
    c.classList.remove('visible');
    setTimeout(() => c.classList.add('visible'), i * 70);
  });
}
setTimeout(animateSteps, 80);

// DASHBOARD
let rChart, dChart, chartsReady = false;
function initCharts() {
  if (chartsReady) return;
  chartsReady = true;
  const base = { responsive: true, maintainAspectRatio: false };
  rChart = new Chart(document.getElementById('radarC'), {
    type: 'radar',
    data: {
      labels: ['Exhaustion', 'Motivation', 'Satisfaction', 'Overwhelm', 'Peers'],
      datasets: [{ data: [5,5,5,5,1], backgroundColor: 'rgba(26,122,74,0.08)', borderColor: 'rgba(26,122,74,0.7)', borderWidth: 2, pointBackgroundColor: '#1a7a4a', pointRadius: 4 }]
    },
    options: { ...base, scales: { r: { min:0, max:10, ticks: { stepSize:2, color:'#b8b0a6', backdropColor:'transparent', font:{size:10} }, grid: { color:'#e5e0d8' }, angleLines: { color:'#e5e0d8' }, pointLabels: { color:'#8a8078', font:{size:11,family:'Outfit'} } } }, plugins: { legend: { display:false } } }
  });
  dChart = new Chart(document.getElementById('donutC'), {
    type: 'doughnut',
    data: { labels: ['Positive','Stress','Peer load'], datasets: [{ data:[50,50,10], backgroundColor:['rgba(26,122,74,0.75)','rgba(192,48,42,0.75)','rgba(29,95,168,0.75)'], borderColor:['#fff'], borderWidth:3 }] },
    options: { ...base, cutout:'60%', plugins: { legend: { display:true, position:'bottom', labels:{ color:'#8a8078', font:{size:11}, padding:12, boxWidth:10 } } } }
  });
}

// Q&A ASSESSMENT ‚Äî scores keyed by question index (1-5)
const qScores = { 1: null, 2: null, 3: null, 4: null, 5: null };
// Q maps: 1=exhaustion, 2=motivation(inverted), 3=satisfaction(inverted), 4=overwhelm, 5=peer

function pickQ(qNum, score, label) {
  // Lock all opts for this question
  document.querySelectorAll(`#aq${qNum} .aq-opt`).forEach(b => {
    b.classList.remove('selected');
    b.classList.add('locked');
  });
  // Mark selected
  event.target.classList.remove('locked');
  event.target.classList.add('selected');

  qScores[qNum] = score;
  updateAssessProgress();
  dashUpdate();
}

function updateAssessProgress() {
  const answered = Object.values(qScores).filter(v => v !== null).length;
  document.getElementById('assessProg').style.width = (answered / 5 * 100) + '%';
  document.getElementById('assessProgLabel').textContent = `${answered} of 5 answered`;
}

function dashUpdate() {
  const s = qScores;
  // Map to the five dimensions
  const e  = s[1] !== null ? s[1] : null;   // exhaustion (high = bad)
  const m  = s[2] !== null ? 11 - s[2] : null; // motivation inverted so high score = bad
  const sat = s[3] !== null ? 11 - s[3] : null; // satisfaction inverted
  const o  = s[4] !== null ? s[4] : null;   // overwhelm (high = bad)
  const p  = s[5] !== null ? s[5] : null;   // peer signals

  const answered = [e, m, sat, o, p].filter(v => v !== null).length;
  if (answered === 0) return;

  // Partial scoring ‚Äî average only answered dims
  const dims = [e, m, sat, o].filter(v => v !== null);
  const rawRisk = dims.reduce((a, b) => a + b, 0) / dims.length;
  const peerBoost = p !== null ? p * 0.3 : 0;
  const risk = Math.min(10, rawRisk + peerBoost);

  // Wellbeing index based on motivation & satisfaction (if answered)
  const posDims = [s[2], s[3]].filter(v => v !== null);
  const wbi = posDims.length ? Math.round(posDims.reduce((a,b)=>a+b,0) / posDims.length / 10 * 100) : null;

  // Stress load based on exhaustion & overwhelm (if answered)
  const negDims = [s[1], s[4]].filter(v => v !== null);
  const stress = negDims.length ? Math.round(negDims.reduce((a,b)=>a+b,0) / negDims.length / 10 * 100) : null;

  document.getElementById('kv-score').textContent = risk.toFixed(1);
  document.getElementById('kv-wbi').textContent  = wbi !== null ? wbi + '%' : '‚Äî';
  document.getElementById('kv-stress').textContent = stress !== null ? stress + '%' : '‚Äî';

  let cls, action, col, rType, rTitle, rText;
  const pct = (risk / 10 * 100).toFixed(1);

  if (risk < 4) {
    cls='Low'; action='No action needed'; col='var(--green)'; rType='low';
    rTitle='üü¢ Low Wellbeing Risk';
    rText='Signals suggest stable wellbeing. Self-care resources are available anytime. The system continues its regular fortnightly cycle.';
  } else if (risk < 6.5) {
    cls='Medium'; action='Follow-up test triggered'; col='var(--amber)'; rType='med';
    rTitle='üü° Medium Wellbeing Signal';
    rText='Some stress indicators detected. A Follow-Up Reflective Test will be offered after a short gap. No escalation yet ‚Äî gentle monitoring and self-help resources provided.';
  } else if (risk < 8.5) {
    cls='High'; action='Counsellor suggestion pending'; col='var(--red)'; rType='high';
    rTitle='üî¥ High Wellbeing Signal';
    rText='Significant signals detected across multiple dimensions. After persistence confirmation, the system will gently ask: "Would you like to speak with a counsellor?" Entirely your choice, entirely private.';
  } else {
    cls='Crisis'; action='Immediate private support'; col='var(--purple)'; rType='high';
    rTitle='üÜò Crisis Signal Detected';
    rText='Extreme distress patterns detected. Urgent, private support resources will be offered immediately. Confidentiality is fully maintained ‚Äî no HR or manager involvement.';
  }

  document.getElementById('kv-class').textContent = cls;
  document.getElementById('kv-class').style.color = col;
  document.getElementById('kv-action').textContent = action;
  document.getElementById('mFill').style.width = pct + '%';
  document.getElementById('mFill').style.backgroundColor = col;

  // Show result panel once all 5 answered
  if (answered === 5) {
    const res = document.getElementById('dashRes');
    res.className = 'result-panel ' + rType;
    res.style.display = 'block';
    document.getElementById('dashResTitle').textContent = rTitle;
    document.getElementById('dashResText').textContent = rText;
    document.getElementById('resetAssess').style.display = 'inline-block';
  }

  // Update charts
  if (chartsReady) {
    const radarData = [
      s[1] !== null ? s[1] : 0,
      s[2] !== null ? s[2] : 0,
      s[3] !== null ? s[3] : 0,
      s[4] !== null ? s[4] : 0,
      s[5] !== null ? s[5] * 2 : 0
    ];
    rChart.data.datasets[0].data = radarData;
    rChart.update('active');

    const posVal  = posDims.length ? Math.round(posDims.reduce((a,b)=>a+b,0)/posDims.length) : 1;
    const negVal  = negDims.length ? Math.round(negDims.reduce((a,b)=>a+b,0)/negDims.length) : 1;
    const peerVal = p !== null ? p : 0;
    dChart.data.datasets[0].data = [posVal, negVal, peerVal];
    dChart.update('active');
  }
}

function resetAssessment() {
  // Reset scores
  Object.keys(qScores).forEach(k => qScores[k] = null);
  // Re-enable all buttons
  document.querySelectorAll('.aq-opt').forEach(b => { b.classList.remove('selected','locked'); });
  // Reset progress
  document.getElementById('assessProg').style.width = '0%';
  document.getElementById('assessProgLabel').textContent = '0 of 5 answered';
  // Hide result + reset btn
  document.getElementById('dashRes').style.display = 'none';
  document.getElementById('resetAssess').style.display = 'none';
  // Reset KPIs
  document.getElementById('kv-score').textContent = '‚Äî';
  document.getElementById('kv-wbi').textContent = '‚Äî';
  document.getElementById('kv-stress').textContent = '‚Äî';
  document.getElementById('kv-class').textContent = 'Pending';
  document.getElementById('kv-class').style.color = '';
  document.getElementById('kv-action').textContent = 'Answer questions below';
  document.getElementById('mFill').style.width = '0%';
  // Reset charts
  if (chartsReady) {
    rChart.data.datasets[0].data = [0,0,0,0,0]; rChart.update();
    dChart.data.datasets[0].data = [0,0,0]; dChart.update();
  }
}

// CHATBOT
const script=[
  {bot:"Hi there üëã Welcome to your fortnightly wellbeing check-in. This is completely private ‚Äî your responses are never shared with your manager or HR. Ready to begin?", opts:[{t:"Yes, let's start üôÇ",sc:0},{t:"What happens to my answers?",sc:null,sp:'privacy'}]},
  {bot:"How would you describe your energy levels over the past two weeks?", opts:[{t:"üòä Good ‚Äî feeling energised",sc:1},{t:"üòê Mixed ‚Äî ups and downs",sc:4},{t:"üòî Low ‚Äî often feel drained",sc:7},{t:"üò© Very low ‚Äî exhausted most days",sc:10}]},
  {bot:"How motivated have you felt about your work recently?", opts:[{t:"üöÄ Very motivated",sc:1},{t:"üôÇ Reasonably motivated",sc:3},{t:"üòë Struggling to find motivation",sc:6},{t:"üòî Little to no motivation",sc:9}]},
  {bot:"Have you felt overwhelmed by your workload or responsibilities?", opts:[{t:"Not at all",sc:1},{t:"Occasionally, but manageable",sc:3},{t:"Fairly often",sc:7},{t:"Almost constantly",sc:10}]},
  {bot:"How satisfied are you with your work environment and role right now?", opts:[{t:"üòä Very satisfied",sc:1},{t:"üôÇ Mostly satisfied",sc:3},{t:"üòê Somewhat dissatisfied",sc:6},{t:"üòû Very dissatisfied",sc:9}]},
  {bot:"One last question ‚Äî do you feel comfortable reaching out to someone at work if you needed support?", opts:[{t:"Yes, absolutely",sc:0},{t:"Maybe ‚Äî not sure who to ask",sc:3},{t:"Probably not",sc:5},{t:"No, it doesn't feel safe to",sc:7}]}
];
let cStep=0,cScore=0,chatStarted=false;

function startChat(){
  chatStarted=true; cStep=0; cScore=0;
  document.getElementById('chatMsgs').innerHTML='';
  document.getElementById('scoreBadge').className='score-badge';
  document.getElementById('scoreNote').textContent='Completes at end of check-in';
  progUpdate(0);
  setTimeout(()=>botMsg(script[0].bot,script[0].opts),500);
}

function botMsg(text,opts){
  const msgs=document.getElementById('chatMsgs');
  const el=document.createElement('div'); el.className='msg bot';
  el.innerHTML=`<div class="msg-av">ü§ñ</div><div class="msg-bub"><div class="typing-bub"><span></span><span></span><span></span></div></div>`;
  msgs.appendChild(el); msgs.scrollTop=msgs.scrollHeight;
  setTimeout(()=>{ el.querySelector('.msg-bub').textContent=text; setOpts(opts); msgs.scrollTop=msgs.scrollHeight; },850);
}

function setOpts(opts){
  const row=document.getElementById('chatOpts'); row.innerHTML='';
  opts.forEach(opt=>{ const b=document.createElement('button'); b.className='copt'; b.textContent=opt.t; b.onclick=()=>pick(opt,b); row.appendChild(b); });
}

function pick(opt,btn){
  document.getElementById('chatOpts').querySelectorAll('.copt').forEach(b=>b.classList.add('used'));
  if(opt.sp==='privacy'){ userMsg("What happens to my answers?"); setTimeout(()=>botMsg("Great question! üîí Your responses are fully anonymous and never shared with your manager, HR, or performance teams. They're only used to offer you personalised support, at your discretion.",script[0].opts.filter(o=>!o.sp)),400); return; }
  if(opt.sp==='restart'){ startChat(); return; }
  userMsg(opt.t);
  if(opt.sc!==null) cScore+=opt.sc;
  cStep++; progUpdate(cStep/(script.length-1));
  if(cStep<script.length){ setTimeout(()=>botMsg(script[cStep].bot,script[cStep].opts),750); }
  else { finishChat(); }
}

function userMsg(text){
  const msgs=document.getElementById('chatMsgs');
  const el=document.createElement('div'); el.className='msg user';
  el.innerHTML=`<div class="msg-av">üë§</div><div class="msg-bub">${text}</div>`;
  msgs.appendChild(el); msgs.scrollTop=msgs.scrollHeight;
}

function finishChat(){
  const pct=cScore/46;
  let label,col,bg,endMsg;
  if(pct<0.3){ label='üü¢ Low Risk';col='var(--green)';bg='var(--green-bg)'; endMsg="Thanks for completing your check-in! Your next one is in two weeks. Take care üòä"; }
  else if(pct<0.6){ label='üü° Medium Signal';col='var(--amber)';bg='var(--amber-bg)'; endMsg="Thanks for being open with us. We'll check in again soon. You're not alone üíõ"; }
  else{ label='üî¥ High Signal';col='var(--red)';bg='var(--red-bg)'; endMsg="Thank you for sharing. A private support option is available whenever you're ready ‚ù§Ô∏è"; }
  const badge=document.getElementById('scoreBadge');
  badge.textContent=label; badge.className='score-badge show';
  badge.style.color=col; badge.style.borderColor=col; badge.style.background=bg;
  document.getElementById('scoreNote').textContent='Based on your 5 responses';
  setTimeout(()=>botMsg(endMsg,[{t:'üîÑ Start again',sc:null,sp:'restart'}]),800);
}

function progUpdate(pct){
  document.getElementById('progFill').style.width=(pct*100)+'%';
  const s=Math.round(pct*(script.length-1));
  document.getElementById('progText').textContent=pct===0?'Not started yet':pct>=1?'Complete ‚úì':`Question ${s} of ${script.length-1}`;
}

// QUIZ
let answers={};
function ans(el,qId,type){
  const card=document.getElementById(qId);
  if(card.dataset.done) return;
  card.dataset.done='1'; answers[qId]=type;
  card.querySelectorAll('.qopt').forEach(o=>{ o.style.pointerEvents='none'; o.style.opacity='0.45'; });
  el.style.opacity='1'; el.classList.add(type);
  document.getElementById(`fb-${qId}-${type}`).classList.add('show');
}
function showScore(){
  const n=Object.values(answers).filter(a=>a==='correct').length;
  document.getElementById('quizBody').style.display='none';
  document.getElementById('quizScore').style.display='block';
  document.getElementById('scoreText').textContent=`${n} / 4`;
  document.getElementById('scoreMsg').textContent=["Keep exploring! Review the workflow and ethics sections and try again.","Good effort! Re-read the ethical principles section to strengthen your understanding.","Great work! You have a solid grasp of the system's core values.","Perfect score! You fully understand this human-centered wellbeing approach. üéâ"][n];
}
function resetQuiz(){
  answers={};
  document.querySelectorAll('.quiz-card').forEach(c=>{ delete c.dataset.done; c.querySelectorAll('.qopt').forEach(o=>{ o.style.pointerEvents=''; o.style.opacity=''; o.classList.remove('correct','wrong'); }); c.querySelectorAll('.qfb').forEach(f=>f.classList.remove('show')); });
  document.getElementById('quizBody').style.display='block';
  document.getElementById('quizScore').style.display='none';
}

// ‚îÄ‚îÄ LOGIN & WELCOME ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
const USERS = {
  'emp@demo.com':  { pass:'pass123', role:'employee', name:'Alex Johnson' },
  'mgr@demo.com':  { pass:'pass123', role:'manager',  name:'Sarah Mitchell' },
  'hr@demo.com':   { pass:'pass123', role:'hr',        name:'David Chen' }
};

const ROLE_CONFIG = {
  employee: {
    icon:'üë§', color:'var(--green)', bg:'var(--green-bg)',
    tag:'Employee Portal',
    heading: name => `Good to see you,<br><em>${name}</em>`,
    desc: "Your wellbeing check-in is ready. Everything you share here is completely private ‚Äî never visible to your manager or HR team.",
    badge: 'üë§ Employee Access',
    cards: [
      { icon:'üí¨', title:'Check-In Bot', desc:'Start your fortnightly wellbeing assessment' },
      { icon:'üìä', title:'Live Dashboard', desc:'See your personal risk signals in real time' },
      { icon:'üõ°Ô∏è', title:'Your Privacy', desc:'Learn exactly how your data is protected' }
    ]
  },
  manager: {
    icon:'üëî', color:'var(--blue)', bg:'var(--blue-bg)',
    tag:'Manager Portal',
    heading: name => `Welcome,<br><em>${name}</em>`,
    desc: "You have access to anonymised team wellbeing trends. Individual employee data is never visible ‚Äî only aggregated insights to help you support your team.",
    badge: 'üëî Manager Access',
    cards: [
      { icon:'üìà', title:'Team Trends', desc:'View anonymised wellbeing signals across your team' },
      { icon:'üîÑ', title:'System Workflow', desc:'Understand how the AI support system works' },
      { icon:'üß≠', title:'Ethics & Design', desc:'Review the privacy principles behind the platform' }
    ]
  },
  hr: {
    icon:'üè¢', color:'var(--amber)', bg:'var(--amber-bg)',
    tag:'HR Portal',
    heading: name => `Hello,<br><em>${name}</em>`,
    desc: "You have access to system-level configuration and anonymised outcomes data. Employee-level wellbeing data is fully protected and inaccessible to HR by design.",
    badge: 'üè¢ HR Admin Access',
    cards: [
      { icon:'üìã', title:'Outcomes Data', desc:'Review anonymised system-level wellbeing patterns' },
      { icon:'‚öôÔ∏è', title:'System Config', desc:'Manage check-in frequency and escalation settings' },
      { icon:'‚úÖ', title:'Knowledge Check', desc:'Ensure your team understands the system\'s ethics' }
    ]
  }
};

let currentRole = 'employee';

function selectRole(role) {
  currentRole = role;
  ['employee','manager','hr'].forEach(r => {
    document.getElementById('role-'+r).classList.toggle('active', r === role);
  });
}

function doLogin() {
  const email = document.getElementById('loginEmail').value.trim().toLowerCase();
  const pass  = document.getElementById('loginPass').value;
  const err   = document.getElementById('loginError');
  const user  = USERS[email];

  err.classList.remove('show');

  if (!user || user.pass !== pass || user.role !== currentRole) {
    err.classList.add('show');
    setTimeout(() => err.classList.remove('show'), 3000);
    return;
  }

  showWelcome(user);
}

function showWelcome(user) {
  document.getElementById('loginPage').style.display = 'none';
  const wp = document.getElementById('welcomePage');
  wp.style.display = 'flex';

  const cfg = ROLE_CONFIG[user.role];
  const firstName = user.name.split(' ')[0];

  // Avatar
  const av = document.getElementById('wAvatar');
  av.textContent = cfg.icon;
  av.style.background = cfg.bg;
  av.style.color = cfg.color;
  av.style.border = `2px solid ${cfg.color}`;
  av.querySelector ? null : null;
  // spin ring color
  const styleId = 'welcomeSpinStyle';
  let stel = document.getElementById(styleId);
  if (!stel) { stel = document.createElement('style'); stel.id = styleId; document.head.appendChild(stel); }
  stel.textContent = `.welcome-avatar::after { border-color: ${cfg.color}; opacity:0.3; }`;

  document.getElementById('wTag').textContent = cfg.tag;
  document.getElementById('wTag').style.color = cfg.color;
  document.getElementById('wHeading').innerHTML = cfg.heading(firstName);
  document.getElementById('wDesc').textContent = cfg.desc;

  const badge = document.getElementById('wBadge');
  badge.textContent = cfg.badge;
  badge.style.color = cfg.color;
  badge.style.borderColor = cfg.color;
  badge.style.background = cfg.bg;

  // Cards
  const cards = document.getElementById('wCards');
  cards.innerHTML = cfg.cards.map(c => `
    <div class="wc-card">
      <div class="wc-icon">${c.icon}</div>
      <div class="wc-title">${c.title}</div>
      <div class="wc-desc">${c.desc}</div>
    </div>
  `).join('');

  // Store for nav chip
  window._loggedUser = user;
}

function enterApp() {
  document.getElementById('welcomePage').style.display = 'none';
  const app = document.getElementById('mainApp');
  app.style.display = 'block';

  // Update nav user chip
  const user = window._loggedUser;
  const cfg  = ROLE_CONFIG[user.role];
  const navUser = document.getElementById('navUser');
  navUser.classList.add('show');
  const navAv = document.getElementById('navAv');
  navAv.textContent = cfg.icon;
  navAv.style.background = cfg.bg;
  navAv.style.color = cfg.color;
  navAv.style.borderRadius = '50%';
  navAv.style.width = '28px'; navAv.style.height = '28px';
  navAv.style.display = 'flex'; navAv.style.alignItems = 'center'; navAv.style.justifyContent = 'center';
  document.getElementById('navName').textContent = user.name;
  document.getElementById('navRole').textContent = cfg.tag;
  document.getElementById('navRole').style.color = cfg.color;
}

function goToLogin() {
  document.getElementById('welcomePage').style.display = 'none';
  document.getElementById('mainApp').style.display = 'none';
  document.getElementById('loginPage').style.display = 'flex';
  document.getElementById('loginEmail').value = '';
  document.getElementById('loginPass').value = '';
  document.getElementById('navUser').classList.remove('show');
  document.getElementById('toolbar').classList.remove('show');
  window._loggedUser = null;
}

// ‚îÄ‚îÄ TOOLBAR SHOW ON LOGIN ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
const _origEnterApp = typeof enterApp === 'function' ? enterApp : null;
function enterApp() {
  document.getElementById('welcomePage').style.display = 'none';
  const app = document.getElementById('mainApp');
  app.style.display = 'block';
  const user = window._loggedUser;
  const cfg  = ROLE_CONFIG[user.role];
  const navUser = document.getElementById('navUser');
  navUser.classList.add('show');
  const navAv = document.getElementById('navAv');
  navAv.textContent = cfg.icon;
  navAv.style.background = cfg.bg;
  navAv.style.color = cfg.color;
  navAv.style.borderRadius = '50%';
  navAv.style.width = '28px'; navAv.style.height = '28px';
  navAv.style.display = 'flex'; navAv.style.alignItems = 'center'; navAv.style.justifyContent = 'center';
  document.getElementById('navName').textContent = user.name;
  document.getElementById('navRole').textContent = cfg.tag;
  document.getElementById('navRole').style.color = cfg.color;
  // show toolbar
  const tb = document.getElementById('toolbar');
  tb.classList.add('show');
  document.getElementById('tbName').textContent = user.name.split(' ')[0];
  renderNotifs();
}

// ‚îÄ‚îÄ DARK MODE ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
let darkMode = false;
function toggleDark() {
  darkMode = !darkMode;
  document.body.classList.toggle('dark', darkMode);
  document.getElementById('tbDark').textContent = darkMode ? '‚òÄÔ∏è' : 'üåô';
  document.getElementById('tbDark').title = darkMode ? 'Switch to light mode' : 'Switch to dark mode';
}

// ‚îÄ‚îÄ NOTIFICATIONS ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
const NOTIFS = [
  { id:1, icon:'üìã', title:'Check-in reminder', msg:'Your fortnightly wellbeing check-in is due today.', time:'Just now', unread:true },
  { id:2, icon:'ü§ù', title:'Peer concern logged', msg:'An anonymous colleague expressed concern for team wellbeing. No action required.', time:'2 hours ago', unread:true },
  { id:3, icon:'üìÖ', title:'Session reminder', msg:'Your counsellor session is tomorrow at 1:30 PM. Check your calendar invite.', time:'Yesterday', unread:true },
  { id:4, icon:'‚úÖ', title:'Check-in complete', msg:'Your last wellbeing check-in was recorded. Result: Low Risk.', time:'2 weeks ago', unread:false },
  { id:5, icon:'üå±', title:'New resource available', msg:'A new mindfulness guide has been added to your self-care toolkit.', time:'3 weeks ago', unread:false },
];
let notifsState = NOTIFS.map(n => ({...n}));

function renderNotifs() {
  const list = document.getElementById('notifList');
  const unread = notifsState.filter(n => n.unread).length;
  document.getElementById('notifBadge').textContent = unread;
  document.getElementById('notifBadge').style.display = unread > 0 ? 'flex' : 'none';
  document.getElementById('notifCount').textContent = unread + ' unread';
  if (!notifsState.length) {
    list.innerHTML = '<div class="notif-empty">üéâ You're all caught up!</div>';
    return;
  }
  list.innerHTML = notifsState.map(n => `
    <div class="notif-item ${n.unread?'unread':''}" onclick="markRead(${n.id})">
      <span class="notif-icon">${n.icon}</span>
      <div class="notif-body">
        <div class="n-title">${n.title}</div>
        <div class="n-msg">${n.msg}</div>
        <div class="n-time">${n.time}</div>
      </div>
    </div>`).join('');
}

function markRead(id) {
  const n = notifsState.find(x => x.id === id);
  if (n) n.unread = false;
  renderNotifs();
}

function clearNotifs() {
  notifsState.forEach(n => n.unread = false);
  renderNotifs();
}

function toggleNotif() {
  const panel = document.getElementById('notifPanel');
  panel.classList.toggle('show');
  if (panel.classList.contains('show')) {
    document.getElementById('tbNotif').classList.add('active');
  } else {
    document.getElementById('tbNotif').classList.remove('active');
  }
}

// close notif on outside click
document.addEventListener('click', e => {
  const panel = document.getElementById('notifPanel');
  const btn = document.getElementById('tbNotif');
  if (panel && panel.classList.contains('show') && !panel.contains(e.target) && !btn.contains(e.target)) {
    panel.classList.remove('show');
    btn.classList.remove('active');
  }
});

// ‚îÄ‚îÄ MODALS ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
function openModal(id) {
  document.getElementById(id).classList.add('show');
  document.body.style.overflow = 'hidden';
  // reset success states
  const form = document.getElementById(id === 'peerModal' ? 'peerForm' : 'counsellorForm');
  const succ = document.getElementById(id === 'peerModal' ? 'peerSuccess' : 'counsellorSuccess');
  if (form) { form.style.display = 'block'; }
  if (succ) { succ.classList.remove('show'); }
}
function closeModal(id) {
  document.getElementById(id).classList.remove('show');
  document.body.style.overflow = '';
}
// close on overlay click
document.querySelectorAll('.modal-overlay').forEach(ov => {
  ov.addEventListener('click', e => { if (e.target === ov) closeModal(ov.id); });
});

function submitPeer() {
  document.getElementById('peerForm').style.display = 'none';
  document.getElementById('peerSuccess').classList.add('show');
  // add a notification
  notifsState.unshift({ id: Date.now(), icon:'ü§ù', title:'Peer concern submitted', msg:'Your anonymous concern has been logged. Thank you for looking out for your colleague.', time:'Just now', unread:true });
  renderNotifs();
}

function submitBooking() {
  document.getElementById('counsellorForm').style.display = 'none';
  document.getElementById('counsellorSuccess').classList.add('show');
  notifsState.unshift({ id: Date.now(), icon:'üìÖ', title:'Counsellor session confirmed', msg:'Your session has been booked for Tuesday at 1:30 PM. A calendar invite has been sent.', time:'Just now', unread:true });
  renderNotifs();
}

function pickSlot(el) {
  document.querySelectorAll('.ts').forEach(t => t.classList.remove('selected'));
  el.classList.add('selected');
}

function toggleDay(el) {
  el.classList.toggle('selected');
}
</script>
